<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:layout_marginBottom="70px"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="7"
        android:columnCount="4">
        <TextView android:text="value1 : " android:layout_gravity="fill" android:layout_columnSpan="2" android:textSize="50px" android:layout_marginBottom="50px"/>
        <TextView android:text="" android:layout_columnSpan="2"/>
        <TextView android:text="value2 : " android:layout_gravity="fill" android:layout_columnSpan="2" android:textSize="50px" android:layout_marginBottom="50px"/>
        <TextView android:text="" android:layout_columnSpan="2"/>
        <Button android:text="1"/>
        <Button android:text="2"/>
        <Button android:text="3"/>
        <Button android:text="C"/>
        <Button android:text="4"/>
        <Button android:text="5"/>
        <Button android:text="6"/>
        <Button android:text="=" android:layout_rowSpan="2" android:layout_gravity="fill_vertical"/>
        <Button android:text="7"/>
        <Button android:text="8"/>
        <Button android:text="9"/>
        <Button android:text="+"/>
        <Button android:text="-"/>
        <Button android:text="*"/>
        <Button android:text="/"/>
        <TextView android:text="result : " android:layout_gravity="fill" android:layout_columnSpan="2" android:textSize="50px" android:layout_marginTop="50px"/>
        <TextView android:text="" android:layout_columnSpan="2"/>
        </GridLayout>

</LinearLayout>